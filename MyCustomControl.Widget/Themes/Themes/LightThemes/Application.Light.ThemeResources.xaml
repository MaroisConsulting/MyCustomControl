<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:themes="clr-namespace:MyCustomControl.ThemeController;assembly=MyCustomControl.ThemeController">

  <!--#region Colors -->
  <Color x:Key="{x:Static themes:ResourceKeys.ControlBackgroundColorKey}">#FFF5F5F5</Color>
  <Color x:Key="{x:Static themes:ResourceKeys.TextColorKey}">Black</Color>
  <Color x:Key="{x:Static themes:ResourceKeys.ControlBorderColorKey}">Green</Color>
  <Color x:Key="{x:Static themes:ResourceKeys.CaptionForegroundColorKey}">DarkTurquoise</Color>
  <!--#endregion-->

  <!--#region Brushes -->  
  <SolidColorBrush x:Key="{x:Static themes:ResourceKeys.ControlBackgroundBrushKey}"
                   Color="{StaticResource {x:Static themes:ResourceKeys.ControlBackgroundColorKey}}" />

  <SolidColorBrush x:Key="{x:Static themes:ResourceKeys.TextBrushKey}"
                   Color="{StaticResource {x:Static themes:ResourceKeys.TextColorKey}}" />
  
  <SolidColorBrush x:Key="{x:Static themes:ResourceKeys.ControlBorderBrushKey}"
                   Color="{StaticResource {x:Static themes:ResourceKeys.ControlBorderColorKey}}" />

  <SolidColorBrush x:Key="{x:Static themes:ResourceKeys.CaptionForegroundBrushKey}"
                   Color="{StaticResource {x:Static themes:ResourceKeys.CaptionForegroundColorKey}}" />
  <!--#endregion-->
</ResourceDictionary>