<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MyCustomControl.Widget"
                    xmlns:themes="clr-namespace:MyCustomControl.ThemeController;assembly=MyCustomControl.ThemeController">

  <Style TargetType="Button"
         x:Key="{x:Static local:AnotherWackyWidget.SearchButtonStyleKey}">

    <!-- Important! -->
    <Setter Property="OverridesDefaultStyle"
            Value="True" />

    <Setter Property="BorderThickness"
            Value="{x:Static themes:ThemeConstants.ControlBorderThickness}" />
    <Setter Property="Height"
            Value="25" />
    <Setter Property="Width"
            Value="55" />
    <Setter Property="Margin"
            Value="0,2,2,2" />
    <Setter Property="VerticalAlignment"
            Value="Center" />
    <Setter Property="HorizontalAlignment"
            Value="Center" />
    <Setter Property="Content"
            Value="Search" />
  </Style>
</ResourceDictionary>
